      "type": "shell",
      "command": "node --harmony app.js",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "isBackground": true,
      "options": {
        "env": {
          "NODE_ENV": "development",
          "KONGA_LOG_LEVEL": "debug"
        }
      }
